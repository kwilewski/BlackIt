<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.narrowstudio.blackit">


    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.UI.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.UI.KnockActivity"></activity>
        <activity android:name=".views.UI.MainActivity"></activity>
        <activity android:name=".views.UI.SettingsActivity"></activity>
        <service
            android:name=".views.UI.FloatingViewService"
            android:enabled="true"
            android:exported="false"/>
        <receiver android:name=".views.broadcast.GoFSReceiver" />
    </application>

</manifest>